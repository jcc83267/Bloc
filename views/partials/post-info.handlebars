<article class="post">
    <div class="title">
        <a href="/post/{{id}}">{{title}}</a>
        {{!-- <span>({{format_url post_url}})</span> --}}
        <img src="{{post_url}}" alt="">
    </div>
    <div class="meta">
        by {{user.username}} on {{format_date created_at}}
        
    </div>
    <div>
    {{post_content}}
       hello
         
    </div>
    <div>
        [{{vote_count}} 🍑's]  [ {{star_rating}} ⭐]
        <a href="/post/{{id}}">{{comments.length}} 🗨️ Comments</a>
    </div>
</article>