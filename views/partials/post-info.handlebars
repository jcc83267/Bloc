<article class="post">
    <div class="title review">
        <a href="/post/{{id}}" target="_blank">{{title}}</a>
        {{!-- <span>({{format_url post_url}})</span> --}}
    </div>
    <div class="meta">
        by {{user.username}} on {{format_date created_at}}
        
    </div>
    <div>
      <p href="/post/{{id}}"> [{{vote_count}} 🍑's] | {{comments.length}} 🗨️ Comments</p>
    </div>
</article>