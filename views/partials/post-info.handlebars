<article class="post">
    <div class="title">
        <a href="/post/{{id}}" target="_blank">{{title}}</a>
        {{!-- <span>({{format_url post_url}})</span> --}}
    </div>
    <div class="meta">
        by {{user.username}} on {{format_date created_at}}
        
    </div>
    <div>
        [{{vote_count}} 🍑's]
        <a href="/post/{{id}}">{{comments.length}} 🗨️ Comments</a>
    </div>
</article>