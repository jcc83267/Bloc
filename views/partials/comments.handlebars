<div>
    <h3>
        <p>{{comments.length}} 🗨️ Comments</p>
    </h3>
</div>
<div class="comments">
    {{#each this}}
    <section class="comment">
        <div class="meta">
            {{vote_count}} {{user.username}} on {{format_date created_at}}
            <a href="/post/{{id}}">{{comments.length}}</a>
        </div>
        <div class="text">
            {{comment_text}}
        </div>
    </section>
    {{/each}}
</div>