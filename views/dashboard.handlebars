<!-- form for adding post -->
<section>
  <h2>Write a New Review on a Title</h2>

  <form class="new-post-form">
  <div>
    <label for="post-title">Title</label>
    <input type="text" id="post-title" name="post-title" />
  </div>
  <div>
    <label for="post-url">Link</label>
    <input id="post-url" name="post-url" />
  </div>
  <button type="button" class="btn btn-primary" id="search-game-btn">Search Game</button>
  </form>
</section>
 {{!-- data-toggle="modal" data-target="#exampleModal --}}

<!-- Modal -->
<div class="modal fade" id="createPostModal" tabindex="-1" role="dialog" aria-labelledby="createPostModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createPostModalLabel">I PLAYED...</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- title of the game searched -->
        <h3 id="searched-title" class=""></h3>
        <!-- image of game artwork -->
        <img src="" alt="game artwork" id="searched-artwork" class="">
        <!-- input for content of post -->
        <label for="post-content">Content</label>
        <input id="post-content" name="post-content" />
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Post Review</button>
      </div>
    </div>
  </div>
</div>

<ol class="post-list">
  {{#each posts}}
  <li>
    <article class="post">
      <div class="title">
        <a href="{{post_url}}" target="_blank">{{title}}</a>
        <span>({{post_url}})</span>
      </div>
      <div class="meta">
        {{vote_count}} üçë's by {{user.username}} on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>

