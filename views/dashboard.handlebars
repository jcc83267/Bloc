<!-- form for adding post -->
<section>
  <h2>Write a New Review on a Title</h2>

  <form class="search-game-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>

    <button type="button" class="btn btn-primary" id="search-game-btn"><a  href="">Search Game</a></button>
  </form>
</section>

<!-- Modal -->
<div class="modal fade" id="createPostModal" tabindex="-1" role="dialog" aria-labelledby="createPostModalLabel"
  aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createPostModalLabel">I PLAYED...</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body">
        <!-- title of the game searched -->
        <h3 id="searched-title" class=""></h3>
        <!-- image of game artwork -->
        <img src="" alt="game artwork" id="searched-artwork" class="">

        <!-- form for content of post -->
        <form class="new-post-form rating">
          <input type="radio" name="star" id="star5"><label class="star" for="star5"></label>
          <input type="radio" name="star" id="star4"><label class="star" for="star4"></label>
          <input type="radio" name="star" id="star3"><label class="star" for="star3"></label>
          <input type="radio" name="star" id="star2"><label class="star" for="star2"></label>
          <input type="radio" name="star" id="star1"><label class="star" for="star1"></label>
          <label for="post-content">What did you think of the game?</label>
          <textarea name="post-content" id="post-review" cols="30" rows="10"></textarea>
          <button type="submit" class="btn btn-primary">Post Review</button>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<ol class="post-list">
  {{#each posts as |post|}}
  <li>
    {{> post-info post }}
    <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
  </li>
  {{/each}}
</ol>

<!-- script for adding post -->
<script src="./javascript/add-post.js"></script>